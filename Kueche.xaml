<Window x:Class="WiSi.Kueche"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiSi"
        mc:Ignorable="d"
        Title="Kueche" Height="450" Width="800" Closing="OnWindowClosing">
    <Grid Background="Crimson">
        <TextBlock Text="Das ist eine Küche" FontSize="30" Foreground="White" TextAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding Top}"/>
    </Grid>
</Window>
