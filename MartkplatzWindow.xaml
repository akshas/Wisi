<Window x:Class="WiSi.MartkplatzWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiSi"
        mc:Ignorable="d"
        Title="MartkplatzWindow" Height="350" Width="600" Closing="OnWindowClosing">
    <Grid Background="DarkSalmon">
        <Grid.RowDefinitions >
            <RowDefinition />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Markt" Foreground="White" FontSize="22" TextAlignment="Center" Margin="0 20 0 0" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.25*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0"  Margin="0 10" HorizontalAlignment="Center" Width="350">
                <Button>
                    Stein
                </Button>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Button Margin="0 50 0 0">
                    Kaufen
                </Button> 
                <Button Margin="0 100 0 0">
                    Verkaufen
                </Button> 
            </StackPanel>
        </Grid>
    </Grid>
</Window>
